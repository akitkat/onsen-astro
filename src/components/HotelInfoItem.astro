---
import { Image } from 'astro:assets';
import HotelMediaItem from './HotelMediaItem.astro';
const hotelImageBaseUrl = import.meta.env.HOTEL_IMAGE_BASE_URL;
const props = Astro.props;
---
<div class="flex flex-col">
  <div>
    <a href="#" target="_blank" class="no-underline">
      <h2>xxxxホテル</h2>
    </a>
  </div>
  <div class="grid grid-cols-1 mb-2.5 sm:grid-cols-2">
    <div class="w-full h-64 mt-0 mx-auto overflow-hidden object-cover sm:m-auto">
      <a href="#" target="_blank">
        <Image
          class="object-cover h-64 m-auto w-full rounded-lg"
          src={ `${hotelImageBaseUrl}/image?w=512&h=512&p=true&rt=1&id=${props.no}` }
          alt="xxxxホテル"
          width="512"
          height="512"
        />
      </a>
    </div>
    <div class="p-2.5 rounded-lg border-box mt-2.5 sm:mt-0 sm:ml-2.5 bg-rose-100">
      <p>{ props.description }</p>
    </div>
  </div>
  <h4>ホテルでお得なプランを見つける</h4>
  <div class="flex flex-wrap justify-between">
    <HotelMediaItem></HotelMediaItem>
    <HotelMediaItem></HotelMediaItem>
    <HotelMediaItem></HotelMediaItem>
  </div>
  <div class="pt-3.5">
    <table>
      <tr>
        <td>住所</td>
        <td>東京都千代田区千代田1</td>
      </tr>
      <tr>
        <td>アクセス</td>
        <td>東京駅徒歩1分</td>
      </tr>
      <tr>
        <td>Tel</td>
        <td>03-1234-5678</td>
      </tr>
    </table>
  </div>
  <div class="flex justify-around">
    <a href="#">
      <button>クーポンを確認する</button>
    </a>
    <a href="#">
      <button>空室を確認する</button>
    </a>
  </div>
</div>
