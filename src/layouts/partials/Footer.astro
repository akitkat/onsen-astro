---
import config from "@config/config.json";
import menu from "@config/menu.json";
import { markdownify } from "@lib/utils/textConverter";
const contactUrl = import.meta.env.CONTACT_URL;
const siteTitle = import.meta.env.SITE_TITLE;
---

<footer class="section bg-theme-dark">
  <div class="container text-center">
    {/* footer menu */}
    <ul class="mb-8 space-x-4">
      {
        menu.footer.map((menu) => (
          <li class="inline-block">
            <a href={menu.url} class="p-4 text-white/75 hover:text-white transition-all">
              {menu.name}
            </a>
          </li>
        ))
      }
      <li class="inline-block">
        <a href={contactUrl} class="p-4 text-white/75 hover:text-white transition-all" target="_blank" rel="noopener noreferrer nofollow">
          お問い合わせ
        </a>
      </li>
    </ul>
    <p set:html={markdownify(`Copyright © ${(new Date()).getFullYear()} ${siteTitle}`)} class="text-white/75" />
  </div>
</footer>
